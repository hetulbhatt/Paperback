@model IEnumerable<BookRental.Models.Booking>

@{
    ViewBag.Title = "Mybooks";
}
<br />
<h2>Mybooks</h2><br/>

@if (Model.Count() != 0)
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.book.bookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.book.author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subscriptionPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subscriptionexpiryDate)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            @using (Html.BeginForm("Read", "MyAccount", FormMethod.Post))
            {
                @Html.HiddenFor(modelitem => item.bookID)
            <td>
                @Html.DisplayFor(modelItem => item.book.bookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.book.author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subscriptionPeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subscriptionexpiryDate)
            </td>
            <td>
               <input value="Read" type="submit" class="btn btn-success"/>
            </td>
            }
        </tr>
    }

    </table>
}
else
{
    <div  class="container" style="text-align:center;height:400px;">
    <h4>No Books in your library.</h4>
    </div>
}