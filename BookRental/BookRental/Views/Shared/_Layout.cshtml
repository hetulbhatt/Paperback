@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/font-awesome.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
          -webkit-appearance: none;
          margin: 0;
        }
        .paycdnumtxt{
            width:200px;
            margin: 5px 0px;
            font-size: 13px;
        }
        .paycdmontxt{
            margin-right: 10px;
            width:65px;
            float: left;
            font-size: 13px;
        }
        .paycdcvvtxt{
            width:70px;
            font-size: 13px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md bg-dark navbar-dark" style="margin-top:-50px;margin-bottom:20px;">
        <a class="navbar-brand" href="/"><img src="~/Content/Logo.png" height="45" width="45"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
@if (User.IsInRole("Manager"))
{
                <li class="nav-item">
                    @Html.ActionLink("Manage Users", "Index", new { controller = "Users" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Manage Books", "Index", new { Controller = "Books" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Manage Category", "Index",new {controller= "Categories"}, new { @class = "nav-link" })
                </li>
}
else
{
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", new { controller = "Home" }, new { hidefocus = "hidefocus", @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", new { controller = "Home" }, new { hidefocus = "hidefocus", @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact us", "Contact", new { controller = "Home" }, new { hidefocus = "hidefocus", @class = "nav-link" })
                </li>
}
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Book Rental System</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
